{
    "manifest_version": 3,
    "name": "Reading Craze",
    "version": "1.0",
    "description": "Enhance your web novel reading experience with customizable fonts, colors, and advanced reading features.",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["*://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  